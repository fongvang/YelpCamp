<% include ../partials/header %>
<!--Above Partial HTML Header-->

<div class="container">
    <div class="row">
      <!--Add New Campgrounds page -- Campgrounds Array in App, move to DB.----->
        <h1 style="text-align: center">Edit <%= campground.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id%>/?_method=PUT" method="POST">
              <!------ Name / URL / Button - Form Spacing ------>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= campground.description%>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-dfault btn-block">Submit!</button>
                </div>
              <!----------End of Name/Button/URL spacing -------->
            </form>
          <!--Back route to Campgrounds page....User is not required to add new-->
            <a href="/campgrounds">Back to Campgrounds</a>  
        </div>
    </div>
</div>


